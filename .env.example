# ==== Argus Environment (example) ====
# Copy this to .env and fill in values. Do NOT commit real secrets.
NODE_ENV=development
PORT=3001

# Proxmox connection
PROXMOX_HOST=https://10.70.20.150:8006
PROXMOX_TOKEN_ID=argus-sa@pve!argus-token
PROXMOX_TOKEN_SECRET=REPLACE_WITH_YOUR_SECRET

# Frontend
NEXT_PUBLIC_API_URL=https://argus.local   # or http://<ARGUS_VM_IP>

# Frontend origin for backend CORS (comma-separated origins supported)
FRONTEND_ORIGIN=http://localhost:3000

# Sessions & persistence
SESSION_SECRET=change_me
MONGO_URL=mongodb://mongo:27017/argus
POSTGRES_URL=

# Dual control toggle for destructive actions (stop/reboot)
REQUIRE_DUAL_CONTROL=false

# Assistant / LLM
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
PROPOSAL_STEP_TIMEOUT_MS=15000
