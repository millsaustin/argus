# Argus backend configuration (copy to backend/.env and fill in real values)

# Core service settings
NODE_ENV=development
PORT=3001
FRONTEND_ORIGIN=http://localhost:3000

# Session & security
SESSION_SECRET=please-change-me

# Database (Postgres) credentials
DB_PASSWORD=super-secure-password
POSTGRES_URL=postgres://argus:${DB_PASSWORD}@db:5432/argus
METRICS_RETENTION_DAYS=90
RETENTION_AUDIT_DAYS=365

# Proxmox API credentials
PROXMOX_API_URL=https://proxmox.local:8006/api2/json
PROXMOX_TOKEN_ID=argus@pam!automation
PROXMOX_TOKEN_SECRET=replace-with-proxmox-token-secret
PROXMOX_MOCK_MODE=true
PROXMOX_MOCK_LATENCY_MS=0

# LLM + notifications
OPENAI_API_KEY=sk-your-openai-key
SMTP_URL=smtp://user:pass@smtp.example.com:587
SENDGRID_API_KEY=your-sendgrid-api-key
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXXX/XXXX/XXXX
